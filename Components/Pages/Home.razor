@page "/"
@inject NavigationManager Navigation

<h1 class="text-center">Employee Management for College</h1>

<!-- QUICK NAVIGATION BUTTONS TO OTHER PAGES -->
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-4 mb-3 d-grid">
            <button class="btn btn-outline-primary btn-lg" @onclick="GoToNew">
                <i class="bi bi-person-lines-fill me-2"></i> Add New Employee
            </button>
        </div>
        <div class="col-md-4 mb-3 d-grid">
            <button class="btn btn-outline-primary btn-lg" @onclick="GoToView">
                <i class="bi bi-tools me-2"></i> View Employees
            </button>
        </div>
        <div class="col-md-4 mb-3 d-grid">
            <button class="btn btn-outline-primary btn-lg" @onclick="GoToModify">
                <i class="bi bi-truck me-2"></i> Modify Employee Data
            </button>
        </div>
    </div>
</div>


@code {
    private void GoToNew()
    {
        Navigation.NavigateTo("/new_employee");
    }

    private void GoToView()
    {
        Navigation.NavigateTo("/view_employee");
    }

    private void GoToModify()
    {
        Navigation.NavigateTo("/modify_employee");
    }
}
